{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-md-6">
        <table class="table table-striped" style="border: 1px solid ghostwhite;">
            <thead>
            <tr>
                <th>Project</th>
                <th>Total</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>

            {% for itemUse in itemUses %}

                <tr>
                    <td style="width: 150px;">
                        <a href="/report/item/details/{{ itemUse.id }}" style="width: 85px;">
                            {{ itemUse.itemName }}
                        </a>
                    </td>
                    <td style="width: 90px;">{{ itemUse.total }}</td>
                    <td style="width: 90px;">{{ itemUse.quantity }}</td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}