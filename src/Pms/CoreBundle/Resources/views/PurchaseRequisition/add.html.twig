{% extends 'base.html.twig' %}

{% block body %}

    {{ include('::flash-message.html.twig') }}

    <span class="purchaseRequisitionMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> Purchase Requisition</div>
                </div>

                <div class="portlet-body form">

                    <div class="form-body left">

                        <div class="form-actions fluid">
                            <div class="table-toolbar" style="float: right;margin-right: 20px;">
                                <div class="btn-group">
                                    <a href="/purchase/requisition/new" class="btn green">
                                        New Purchase
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions fluid" id="project-list-div">
                            <div class="form-group">
                                <div class="col-md-12" style="margin-top: 30px;">

                                    <table class="table bold" style="border: 1px solid ghostwhite;">
                                        <thead>
                                        <tr>
                                            <th>Sl</th>
                                            <th>Date</th>
                                            <th>Requisition No</th>
                                            <th>Project</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% if page == 1 %}{% set i = 0 %}
                                        {% else %}{% set i = (page * 50) -50 %}
                                        {% endif %}

                                        {% for purchaseRequisition in purchaseRequisitions %}
                                            {% set i = i + 1 %}
                                            {% set color = [" "] %}
                                            {% set bgColor = [" "] %}

                                            {% if purchaseRequisition.status == 0 %}{% set color = color|merge(["red"]) %}
                                            {% elseif purchaseRequisition.status == 1 %}{% set color = color|merge(["green"]) %}
                                            {% endif %}

                                            {% if purchaseRequisition.approvedByProjectHead == 0 %}{% set bgColor = bgColor|merge(["#e8e0d1"]) %}
                                            {% elseif purchaseRequisition.approvedByProjectHead == 1 and purchaseRequisition.approvedByCategoryHeadOne == 0 %}{% set bgColor = bgColor|merge(["#dff0d8"]) %}
                                            {% elseif purchaseRequisition.approvedByCategoryHeadOne == 1 and purchaseRequisition.approvedByCategoryHeadTwo == 0 %}{% set bgColor = bgColor|merge(["#bdd1bd"]) %}
                                            {% elseif purchaseRequisition.approvedByCategoryHeadtwo == 1 and purchaseRequisition.approvedByCategoryHeadTwo == 1 %}{% set bgColor = bgColor|merge(["#bdc4bb"]) %}
                                            {% endif %}

                                            <tr style="background: {{ bgColor|join("") }};">
                                                <td>{{ i }} .</td>
                                                <td class="col-md-2" style="color: {{ color|join("") }};">{{ purchaseRequisition.dateOfRequisition|date('Y-m-d') }}</td>
                                                <td class="col-md-2" style="color: {{ color|join("") }};">{{ purchaseRequisition.requisitionNo }}</td>
                                                <td class="col-md-3" style="color: {{ color|join("") }};">{{ purchaseRequisition.project.projectName }}</td>

                                                {% if purchaseRequisition.approvedByProjectHead == 0 %}
                                                    <td class="col-md-1"><a href="/purchase/requisition/approve/projectHead/{{ purchaseRequisition.id }}">projectHead</a></td>
                                                {% endif %}
                                                {#{% if purchaseRequisition.approvedByProjectHead == 1 %}#}
                                                    {#<td class="col-md-1" style="color: green;">Approved</td>#}
                                                {#{% endif %}#}

                                                {% if purchaseRequisition.approvedByProjectHead == 1 and purchaseRequisition.approvedByCategoryHeadOne == 0 %}
                                                    <td class="col-md-1"><a href="/purchase/requisition/approve/CategoryHeadOne/{{ purchaseRequisition.id }}"">CategoryHeadOne</a></td>
                                                {% endif %}
                                                {#{% if purchaseRequisition.approvedByCategoryHeadOne == 1 %}#}
                                                    {#<td class="col-md-1" style="color: green;">Approved</td>#}
                                                {#{% endif %}#}

                                                {% if purchaseRequisition.approvedByCategoryHeadOne == 1 and purchaseRequisition.approvedByCategoryHeadTwo == 0 %}
                                                    <td class="col-md-1"><a href="/purchase/requisition/approve/CategoryHeadTwo/{{ purchaseRequisition.id }}">CategoryHeadTwo</a></td>
                                                {% endif %}
                                                {% if purchaseRequisition.approvedByCategoryHeadTwo == 1 %}
                                                    <td class="col-md-1" style="color: green;">Approved</td>
                                                {% endif %}
                                                <td>
                                                    {% if purchaseRequisition.approvedByProjectHead == 0 or purchaseRequisition.approvedByCategoryHeadOne == 0 or purchaseRequisition.approvedByCategoryHeadTwo == 0 %}
                                                            <a href="/purchase/requisition/edit/{{ purchaseRequisition.id }}" style="width: 100px;" class="btn default btn-xs green-stripe"><i
                                                                        class="fa fa-edit"></i> Edit</a>
                                                    {% endif %}
                                                </td>
                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="navigation" style="text-align: right">
                                        {{ knp_pagination_render(purchaseRequisitions) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}