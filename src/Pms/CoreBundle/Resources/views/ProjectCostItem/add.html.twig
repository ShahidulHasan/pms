{% extends 'base.html.twig' %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
            <strong></strong> {{ flashMessage }}.
        </div>
    {% endfor %}

    <span class="projectCostItemMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i>Cost</div>
                </div>

                <div class="portlet-body form">
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'cost-form', 'novalidate': 'novalidate'} }) }}
                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">

                            <div class="portlet-body">
                                <div class="col-md-12">

                                    <table id="table_project_cost" class="col-md-8">

                                        <tr>
                                            <td>
                                                <div class="input-group input-small date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                                    <span class="input-group-btn"></span>
                                                    {{ form_widget(form.dateOfCost, { 'attr': {'class': 'form-control', 'style': 'width:165px;margin-right: 50px;'} }) }}
                                                </div>
                                            </td>
                                            <td>
                                                {{ form_widget(form.category, { 'attr': {'class': 'form-control', 'style': 'width:180px;margin-right: 50px;'} }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.invoice, { 'attr': {'class': 'form-control', 'style': 'width:180px;margin-right: 50px;'} }) }}
                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                {{ form_widget(form.pr, { 'attr': {'class': 'form-control', 'style': 'width:165px;'} }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.subCategory, { 'attr': {'class': 'form-control', 'style': 'width:180px;margin-right: 50px;'} }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.grn, { 'attr': {'class': 'form-control', 'style': 'width:180px;'} }) }}
                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                {{ form_widget(form.project, { 'attr': {'class': 'form-control', 'style': 'width:166px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.buyer, { 'attr': {'class': 'form-control select2me', 'style': 'width:180px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.quantity, { 'attr': {'class': 'form-control quantity', 'style': 'width:180px;'} }) }}
                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                {{ form_widget(form.item, { 'attr': {'class': 'form-control select2me', 'style': 'width:166px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.po, { 'attr': {'class': 'form-control', 'style': 'width:180px;margin-right: 50px;'} }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.unitPrice, { 'attr': {'class': 'form-control unitPrice', 'style': 'width:180px;'} }) }}
                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                        </tr>

                                    </table>
                                    <table class="col-md-2">
                                        <tr>
                                            <td>
                                                {{ form_widget(form.lineTotal, { 'attr': {'class': 'form-control lineTotal', 'style': 'width:180px;'} }) }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                {{ form_widget(form.comment, { 'attr': {'class': 'form-control lineTotal', 'style': 'width:180px;height:72px;'} }) }}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;">
                                                <input type="button" name="ajaxSaveprojectCostItem" value="Save" id="ajaxSaveprojectCostItem" class="btn green button-width" style="height:32px;">
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}

                        <div class="form-actions">
                            <div class="form-group">
                                <div class="col-md-12">

                                    <form action="{{ path('project_cost_add') }}" method="get" {{ form_enctype(formSearch) }} name="search">

                                        <div class="portlet-body">

                                                <table id="table_project_cost">
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                {{ form_widget(formSearch.project, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                                            </td>
                                                            <td>
                                                                {{ form_widget(formSearch.item, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                                            </td>
                                                            <td>
                                                                <div class="input-group input-small date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                                                    <span class="input-group-btn"></span>
                                                                    <input type="text" placeholder="Start Date" name="start_date" class="form-control" style="width: 140px;" readonly/>
                                                                </div>
                                                            </td>
                                                            <td style="font-size: 16px; font-weight: bold;">
                                                                To
                                                            </td>
                                                            <td>
                                                                <div class="input-group input-small date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                                                    <span class="input-group-btn"></span>
                                                                    <input type="text" placeholder="End Date" name="end_date" class="form-control" style="width: 140px;" readonly/>
                                                                </div>
                                                            </td>
                                                        </tr>

                                                        <tr>
                                                            <td>
                                                                {{ form_widget(formSearch.categoryWise, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                                            </td>
                                                            <td>
                                                                <input type="text" name="invoice" placeholder="invoice" class="form-control" style="width: 140px;"/>
                                                            </td>
                                                            <td>
                                                                <input type="text" name="grn" placeholder="GRN#" class="form-control" style="width: 140px;"/>
                                                            </td>
                                                            <td>

                                                            </td>
                                                            <td>
                                                                {{ form_widget(formSearch.search, { 'attr': {'class': 'btn grey button-width', 'style': 'height:32px;' } } ) }}
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>

                                        </div>

                                </form>
                                </div>

                                    <div class="col-md-12" style="margin-top: 30px; margin-left: 0;" id="cost-list-div">

                                        <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                            <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Date</th>
                                                <th>Project</th>
                                                <th>Item</th>
                                                <th>Quantity</th>
                                                <th>Unite Price</th>
                                                <th>Total</th>
                                                <th></th>
                                                <th>Status</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% if page == 1 %}{% set i = 0 %}
                                            {% else %}{% set i = (page * 50) -50 %}
                                            {% endif %}

                                            {% for projectCostItems in projectCostItem %}
                                                {% set i = i + 1 %}
                                                {% set color = [" "] %}

                                                {% if projectCostItems.status == 0 %}{% set color = color|merge(["red"]) %}
                                                {% elseif projectCostItems.status == 1 %}{% set color = color|merge(["green"]) %}
                                                {% endif %}

                                                <tr>
                                                    <td class="col-md-1">{{ i }} .</td>
                                                    <td class="col-md-2" style="color: {{ color|join(" ") }}">{{ projectCostItems.dateOfCost|date('Y-m-d') }}</td>
                                                    <td class="col-md-2" style="color: {{ color|join(" ") }}">{{ projectCostItems.project.projectName | length > 12 ? projectCostItems.project.projectName | slice(0, 12) ~ ' ...' : projectCostItems.project.projectName }}</td>
                                                    <td class="col-md-2" style="color: {{ color|join(" ") }}">{{ projectCostItems.item.itemName | length > 11 ? projectCostItems.item.itemName | slice(0, 11) ~ ' ...' : projectCostItems.item.itemName }}</td>
                                                    <td class="col-md-1" style="color: {{ color|join(" ") }}">{{ projectCostItems.quantity }} {{ projectCostItems.item.itemUnit }}</td>
                                                    <td class="col-md-2" style="color: {{ color|join(" ") }}">{{ projectCostItems.unitPrice }} Tk / {{ projectCostItems.item.itemUnit }}</td>
                                                    <td class="col-md-2" style="color: {{ color|join(" ") }}">{{ projectCostItems.lineTotal }} Tk</td>
                                                    <td><a href="/project-cost/details/{{ projectCostItems.id }}" data-target="#ajax" data-toggle="modal">View</a></td>
                                                    {% if projectCostItems.status == 0 %}
                                                        <td>
                                                            <a href="#" data-myvalue="{{ projectCostItems.id }}" class="check-by-ajax btn default btn-xs red-stripe"><i
                                                                        class="fa fa-plus"></i> Check</a>
                                                        </td>
                                                        <td>
                                                            <a href="/project-cost/update/{{ projectCostItems.id }}" style="width: 80px;" class="btn default btn-xs blue-stripe"><i
                                                                        class="fa fa-edit"></i> Update</a>
                                                        </td>
                                                    {% endif %}
                                                    {% if projectCostItems.status == 1 %}
                                                        <td style=" color: red;">
                                                            <a href="#" class="btn default btn-xs green-stripe"><i class="fa fa-check"></i> Checked</a>
                                                        </td>
                                                        {% if is_granted("ROLE_SUPER_ADMIN") %}
                                                        <td>
                                                            <a href="/project-cost/delete/{{ projectCostItems.id }}" class="btn default btn-xs blue-stripe"><i
                                                                        class="fa fa-edit"></i> Delete</a>
                                                        </td>
                                                        <td>
                                                            <a href="/project-cost/update/{{ projectCostItems.id }}" class="btn default btn-xs blue-stripe"><i
                                                                        class="fa fa-edit"></i> Update</a>
                                                        </td>
                                                        {% endif %}
                                                    {% endif %}
                                                </tr>

                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="modal fade" id="ajax" tabindex="-1" role="basic" aria-hidden="true">
                                            <img src="assets/img/ajax-modal-loading.gif" alt="" class="loading">
                                        </div>
                                        <div class="navigation" style="text-align: right">
                                            {{ knp_pagination_render(projectCostItem) }}
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}