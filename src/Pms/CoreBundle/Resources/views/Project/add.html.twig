{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i>Project</div>
                </div>

                <div class="portlet-body form">
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': '', 'novalidate': 'novalidate'} }) }}
                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">

                            <div class="form-group">
                                {{ form_label(form.projectName, 'Project Name :', {'label_attr': {'class': 'control-label col-md-2', 'style' : 'margin-right:-60px;font-weight:bold;' } }
                                ) }}
                                <div class="col-md-7">
                                    <div class="input-icon">
                                        <i class="fa"></i>
                                        {{ form_widget(form.projectName, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;'} }) }}
                                    </div>
                                </div>
                                {{ form_widget(form.save, { 'attr': {'class': 'btn green button-width col-md-1', 'style' : 'margin-top:2px;margin-left:10px;height:32px;' } }
                                ) }}
                                <span class="userMessege" style="margin-left: 185px;"></span>
                            </div>

                        </div>

                        <div class="form-actions fluid">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="col-md-8" style="margin-left: 12%;">

                                        <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                            <tbody>

                                            {% set Route = app.request.uri %}
                                            {% set Url = Route|split('=') %}

                                            {% if Url[1] | default() == null %}{% set i = 0 %}
                                            {% elseif Url[1] != null %}{% set i = (Url[1]*10)-10 %}
                                            {% endif %}

                                            {% for projects in project %}
                                                {% set i = i + 1 %}
                                                {% set color = [" "] %}

                                                {% if projects.status == 0 %}{% set color = color|merge(["red"]) %}
                                                {% elseif projects.status == 1 %}{% set color = color|merge(["green"]) %}
                                                {% endif %}

                                                <tr>
                                                    <td style="width: 50px;">{{ i }} .</td>
                                                    <td style="width: 250px; color: {{ color|join("") }};">{{ projects.projectName }}</td>
                                                    {% if projects.status == 1 %}
                                                        <td style="width: 80px;">
                                                            <a href="/project/update/{{ projects.id }}" class="btn default btn-xs green-stripe"><i
                                                                        class="fa fa-edit"></i> Update</a>
                                                        </td>
                                                        <td style="width: 80px;">
                                                            <a href="/project/delete/{{ projects.id }}" class="btn default btn-xs blue-stripe"><i
                                                                        class="fa fa-trash-o"></i> Delete</a>
                                                        </td>
                                                    {% endif %}
                                                    {% if projects.status == 0 %}
                                                        <td style="width: 80px; color: red;">
                                                            <a href="#" class="btn default btn-xs red-stripe"> The Item Is Deleted</a>
                                                        </td>
                                                        <td style="width: 80px;">

                                                        </td>
                                                    {% endif %}
                                                </tr>

                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation" style="text-align: right">
                                            {{ knp_pagination_render(project) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}