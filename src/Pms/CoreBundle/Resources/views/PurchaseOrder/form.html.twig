{% extends 'base.html.twig' %}

{% block body %}

    <div class="modal-dialog" style="width: 1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title bold" style="text-align: center;"> Purchase Order Form</h4>
            </div>

            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'purchase-form', 'novalidate': 'novalidate'} }) }}
            <div class="modal-body">
                <div class="row">

                    <div class="col-md-12">
                        <div class="col-md-6" style="height:100px;float: left;text-align: left;">
                            <div class="col-md-12" style="height:50px;float:left;">
                                <div class="form-group">
                                    {{ form_label(form.poNonpo, 'PO/NONPO :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left: -28px;margin-right:-12px;font-weight:bold;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            {{ form_widget(form.poNonpo, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;width: 178px;' } }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="height:35px;float:left;">
                                <div class="form-group" id="vendor-group">
                                    {{ form_label(form.vendor, 'Vendor :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left: -30px;margin-right:-20px;font-weight:bold;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            {{ form_widget(form.vendor, { 'attr': {'class': 'form-control select2me', 'style': 'padding-left: 10px !important;', 'placeholder': ' Select Vendor' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group" id="buyer-group">
                                    {{ form_label(form.buyer, 'Buyer :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left: -30px;margin-right:-20px;font-weight:bold;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            {{ form_widget(form.buyer, { 'attr': {'class': 'form-control select2me', 'style': 'padding-left: 10px !important;', 'placeholder': ' Select Buyer' } }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6" style="height:100px;float: right;">
                            <div class="col-md-12" style="height:50px;float:left;">
                                <div class="form-group">
                                    {{ form_label(form.orderNo, 'Order No :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left:15px;font-weight:bold;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            {{ form_widget(form.orderNo, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;' } }) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12" style="height:35px;float:left;">
                                <div class="form-group">
                                    {{ form_label(form.dateOfDelivered, 'Date :', {'label_attr': {'class': 'control-label col-md-4', 'style': 'margin-left:15px;font-weight:bold;' } }
                                    ) }}
                                    <div class="col-md-6">
                                        <div class="input-icon">
                                            <div class="input-group input-small date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                                <span class="input-group-btn"></span>
                                                {{ form_widget(form.dateOfDelivered, { 'attr': {'class': 'form-control', 'style': 'width: 188px;padding-left: 10px! important;'} }) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
<br/>
<br/>
<br/>
                    <div class="col-md-12">
                        <table class="table table-striped" style="border:1px solid grey;margin-top: 100px;">
                            <thead>
                            <tr>
                                <th class="col-md-3" style="padding-left: 30px;">Particulars</th>
                                <th class="col-md-2" style="padding-left: 12px;">Quantity</th>
                                <th class="col-md-2" style="padding-left: 12px;"></th>
                                <th class="col-md-3" style="padding-left: 12px;">Remarks</th>
                                <th class="col-md-2"></th>
                            </tr>
                            </thead>
                            <tbody id="orderItems" class="tags" data-prototype="{% filter escape %}
                                {{ include('PmsCoreBundle:PurchaseOrder:purchaseOrderItemPrototype.html.twig', { 'form': form.purchaseOrderItems.vars.prototype }) }}
                                {% endfilter %}}">
                                {% for orderItem in form.purchaseOrderItems %}
                                    <tr>
                                        <td>
                                            {{ form_widget(orderItem.item, { 'attr': {'class': 'form-control', 'style': 'margin-left: 20px;width: 180px;padding-left: 10px! important;'} }) }}
                                        </td>
                                        <td>
                                            {{ form_widget(orderItem.quantity, { 'attr': {'class': 'form-control', 'style': 'width: 120px;padding-left: 10px! important;'} }) }}
                                        </td>
                                        <td>

                                        </td>
                                        <td>
                                            {{ form_widget(orderItem.comment, { 'attr': {'class': 'form-control', 'style': 'width: 188px;padding-left: 10px! important;'} }) }}
                                        </td>
                                        <td>
                                            {{ form_widget(orderItem.delete, { 'attr': {'class': 'btn', 'style': 'width: 70px;' } }) }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                {{ form_widget(form.save, { 'attr': {'class': 'btn green button-width', 'style': 'width: 100px;' } }) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block documentready %}
    {{ parent() }}

    function addTagForm($collectionHolder, $newLinkLi) {
    // Get the data-prototype explained earlier
    var prototype = $collectionHolder.data('prototype');

    // get the new index
    var index = $collectionHolder.data('index');

    // Replace '__name__' in the prototype's HTML to
    // instead be a number based on how many items we have
    var newForm = prototype.replace(/__name__/g, index);

    // increase the index with one for the next item
    $collectionHolder.data('index', index + 1);

    // Display the form in the page in an li, before the "Add a tag" link li
    var $newFormLi = $('<tr></tr>').append(newForm);
    $newLinkLi.before($newFormLi);
    $('.date-picker').datepicker();

    $("#purchaseorder_purchaseOrderItems_" + index + "_item").change(function () {
    var item = $("#purchaseorder_purchaseOrderItems_" + index + "_item").val();
    $.ajax({
    type: "post",
    url: Routing.generate('purchase_order_total_quantity'),
    data: "item=" + item,
    dataType: 'json',
    success: function (response, status) {
    $("#purchaseorder_purchaseOrderItems_" + index + "_quantity").val(response.quantity);
    }
    });
    });

    $("#purchaseorder_purchaseOrderItems_" + index + "_delete").click(function () {
    var parent = $(this).closest('tr');
    parent.remove();
    });

    }

    var $collectionHolder;

    // setup an "add a tag" link
    var $addTagLink = $('<td><div style="text-align: left;margin-left: 20px;"><a href="#" class="btn default btn-xs green-stripe add_tag_link"><i class="fa fa-plus"></i> Add Item</a></div></td><td></td><td></td><td></td><td></td>');
    var $newLinkLi = $('<tr></tr>').append($addTagLink);

    // Get the ul that holds the collection of tags
    $collectionHolder = $('#orderItems');

    // add the "add a tag" anchor and li to the tags ul
    $collectionHolder.append($newLinkLi);

    // count the current form inputs we have (e.g. 2), use that as the new
    // index when inserting a new item (e.g. 2)
    $collectionHolder.data('index', $collectionHolder.find(':input').length);

    $addTagLink.on('click', function(e) {
    // prevent the link from creating a "#" on the URL
    e.preventDefault();

    // add a new tag form (see next code block)
    addTagForm($collectionHolder, $newLinkLi);
    });

    $("#purchaseorder_poNonpo").change(function () {
    var poNonpo = $("#purchaseorder_poNonpo").val();
        if(poNonpo==1){
    $('#buyer-group').show();
    $('#vendor-group').hide();
        }else{
    $('#vendor-group').show();
    $('#buyer-group').hide();
        }
    });

{% endblock %}
