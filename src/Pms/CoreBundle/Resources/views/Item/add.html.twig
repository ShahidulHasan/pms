{% extends 'base.html.twig' %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
            <strong></strong> {{ flashMessage }}.
        </div>
    {% endfor %}

    <span class="itemMessege"></span>

    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title"></h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-gift"></i>
                    <a href="#" class="item-active-list">Active Item List</a>
                    <i class="fa">|</i>
                </li>
                <li>
                    <i class="fa fa-gift"></i>
                    <a href="#" class="item-deleted-list">Deleted Item List</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> Item</div>
                </div>

                <div class="portlet-body form">

                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'item-form', 'novalidate': 'novalidate'} }) }}
                            <div class="form-group">
                                {{ form_label(form.itemName, 'Item Name :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'margin-right:-60px;font-weight:bold;' } }
                                ) }}
                                <div class="col-md-8">
                                    <div class="input-icon">
                                        {{ form_widget(form.itemName, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;' } }) }}
                                    </div>
                                </div>
                                <span class="userMessege" style="margin-left: 185px;"></span>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.itemUnit, 'Unit Name:', {'label_attr': {'class': 'control-label col-md-2', 'style': 'margin-right:-60px;font-weight:bold;' } }
                                ) }}
                                <div class="col-md-8">
                                    <div class="input-icon">
                                        {{ form_widget(form.itemUnit, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;' } }) }}
                                    </div>
                                </div>
                                <input type="button" name="ajaxSaveItem" value="Save" id="ajaxSaveItem" class="btn green button-width col-md-1" style="margin-top:2px;margin-left:10px;height:32px;">
                            </div>
                            {{ form_end(form) }}
                        </div>

                        <div class="form-actions fluid" id="item-list-div">
                            <div class="form-group">
                                <div class="col-md-12">
                                <div class="col-md-11" style="margin-top: 30px;margin-left: 4%;">

                                    <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                        <thead>
                                        <tr>
                                            <th>Sl</th>
                                            <th>Item Name</th>
                                            <th>Unit</th>
                                            <th>Status</th>
                                            <th>Edit</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% if page == 1 %}{% set i = 0 %}
                                        {% else %}{% set i = (page * 10) - 10 %}
                                        {% endif %}

                                        {% for items in item %}
                                            {% set i = i + 1 %}
                                            {% set color = [" "] %}

                                            {% if items.status == 0 %}{% set color = color|merge(["red"]) %}
                                            {% elseif items.status == 1 %}{% set color = color|merge(["green"]) %}
                                            {% endif %}

                                            <tr>
                                                <td style="width: 60px;">{{ i }} .</td>
                                                <td style="width: 422px; color: {{ color|join("") }};">{{ items.itemName }}</td>
                                                <td style="width: 200px; color: {{ color|join("") }};">{{ items.itemUnit }}</td>
                                                <td style="width: 80px;">
                                                    <a href="/item/delete/{{ items.id }}" style="width: 85px;" class="btn default btn-xs green-stripe"><i
                                                                class="fa fa-trash-o"></i> Delete</a>
                                                </td>
                                                <td>
                                                    <a href="/item/update/{{ items.id }}" style="width: 85px;" class="btn default btn-xs blue-stripe"><i
                                                                class="fa fa-edit"></i> Update</a>
                                                </td>
                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="navigation" style="text-align: right">
                                        {{ knp_pagination_render(item) }}
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}