{% extends 'base.html.twig' %}

{% block body %}

    <div id="pie_chart" class="chart"></div>

    <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
        <thead>
        <tr>
            <th>Project</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>

        {% for projectcost in projectcosts %}

            <tr>
                <td style="width: 150px;">{{ projectcost.projectName }}</td>
                <td style="width: 90px;">{{ projectcost.total }}</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

    <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
        <thead>
        <tr>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>

        {% for costs in cost %}

            <tr>
                <td style="width: 90px;">{{ costs.total }}</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

{% endblock %}