{% extends 'base.html.twig' %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
            <strong></strong> {{ flashMessage }}.
        </div>
    {% endfor %}

    <span class="itemMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i>Item</div>
                </div>

                <div class="portlet-body form">
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'item-form', 'novalidate': 'novalidate'} }) }}
                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">

                            <div class="portlet-body">
                                <div class="col-md-11" style="margin-left: 40px;">

                                    <table id="table_project_cost">
                                        <thead>
                                        <tr>
                                            <th>{{ form_label(form.username, 'Username', {'label_attr': {'class': '' } } ) }}</th>
                                            <th>{{ form_label(form.email, 'Email', {'label_attr': {'class': '' } } ) }}</th>
                                            <th>{{ form_label(form.plainPassword.first, 'Password', {'label_attr': {'class': '' } } ) }}</th>
                                            <th>{{ form_label(form.plainPassword.second, 'Confirm Password', {'label_attr': {'class': '' } } ) }}</th>
                                            <th>{{ form_label(form.role, 'User Role', {'label_attr': {'class': '' } } ) }}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>
                                                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'style': 'width:180px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'style': 'width:220px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.role, { 'attr': {'class': 'form-control', 'style': 'width:140px;' } }) }}
                                            </td>
                                            <td>
                                                {{ form_widget(form.save, { 'attr': {'class': 'btn green button-width', 'style': 'height:32px;' } } ) }}
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>

                        <div class="form-actions fluid" id="item-list-div">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="col-md-11" style="margin-top: 30px;margin-left: 4%;">

                                        <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                            <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>User Name</th>
                                                <th>Access Role</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% if page == 1 %}{% set i = 0 %}
                                            {% else %}{% set i = (page * 10) -10 %}
                                            {% endif %}

                                            {% for user in users %}
                                                {% set i = i + 1 %}

                                                <tr>
                                                    <td style="width: 60px;">{{ i }} .</td>
                                                    <td style="width: 622px;">{{ user.username }}</td>
                                                    <td style="width: 622px;">{{ user.role }}</td>
                                                </tr>

                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation" style="text-align: right">
                                            {{ knp_pagination_render(users) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}