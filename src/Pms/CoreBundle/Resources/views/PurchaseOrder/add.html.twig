{% extends 'base.html.twig' %}

{% block body %}

    {{ include('::flash-message.html.twig') }}

    <span class="purchaseOrderedMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> PO. List</div>
                </div>

                <div class="portlet-body form">

                    <div class="form-body left">

                        <div class="form-actions fluid">
                            <div class="table-toolbar" style="float: right;margin-right: 20px;">
                                <div class="btn-group">
                                    <a href="/purchase/order/new" class="btn green">
                                        Create PO
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions fluid" id="project-list-div">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="col-md-12" style="margin-top: 30px;">

                                        <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                            <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>PO. No</th>
                                                <th>Created Date</th>
                                                <th>Vendor/Buyer</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% if page == 1 %}{% set i = 0 %}
                                            {% else %}{% set i = (page * 50) -50 %}
                                            {% endif %}

                                            {% for purchaseOrder in purchaseOrders %}
                                                {% set i = i + 1 %}

                                                <tr>
                                                    <td class="col-md-1">{{ i }} .</td>
                                                    <td class="col-md-2">{{ purchaseOrder.orderNo }}</td>
                                                    <td class="col-md-2">{{ purchaseOrder.createdDate|date('Y-m-d') }}</td>
                                                    <td class="col-md-2">{{ purchaseOrder.vendor.vendorName |default() }}{{ purchaseOrder.buyer.buyerName |default() }}</td>

                                                    {% if purchaseOrder.approvedOne == null %}
                                                        <td class="col-md-1"><a href="/purchase/order/approve/one/{{ purchaseOrder.id }}">Open</a></td>
                                                    {% endif %}

                                                    {% if purchaseOrder.approvedOne != null and purchaseOrder.approvedTwo == null %}
                                                        <td class="col-md-1"><a href="/purchase/order/approve/two/{{ purchaseOrder.id }}">Approved</a></td>
                                                    {% endif %}

                                                    {% if purchaseOrder.approvedTwo != null and purchaseOrder.approvedThree == null %}
                                                        <td class="col-md-1"><a href="/purchase/order/approve/three/{{ purchaseOrder.id }}">Validated</a></td>
                                                    {% endif %}

                                                    {% if purchaseOrder.approvedThree != null %}
                                                        <td class="col-md-1">
                                                            Verified
                                                        </td>
                                                    {% endif %}

                                                    <td class="col-md-1">
                                                        <a href="/purchase/order/details/{{ purchaseOrder.id }}" data-target="#ajax" data-toggle="modal"><i class="fa fa-info-circle"></i></a>
                                                    </td>
                                                </tr>

                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation" style="text-align: right">
                                            {{ knp_pagination_render(purchaseOrders) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}