<div class="form-group">
    <div class="col-md-12">
        <div class="col-md-11" style="margin-top: 30px;margin-left: 4%;">

            <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                <thead>
                <tr>
                    <th>Sl</th>
                    <th>Item Name</th>
                    <th>Unit</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>

                {% if page == 1 %}{% set i = 0 %}
                {% else %}{% set i = (page * 10) - 10 %}
                {% endif %}

                {% for item in items %}

                    {% set i = i + 1 %}
                    {% set color = [" "] %}

                    {% if item.status == 0 %}{% set color = color|merge(["red"]) %}
                    {% elseif item.status == 1 %}{% set color = color|merge(["green"]) %}
                    {% endif %}

                    <tr>
                        <td>{{ i }} .</td>
                        <td class="col-md-4" style="color: {{ color|join("") }};">{{ item.itemName }}</td>
                        <td class="col-md-2" style="color: {{ color|join("") }};">{{ item.itemUnit }}</td>
                        <td class="col-md-4" style="color: {{ color|join("") }};">{{ item.category.categoryName | default() }}</td>
                        <td style="color: red;">
                            <a href="#" class="btn default btn-xs red-stripe" style="width: 85px;"><i
                                        class="fa fa-times"></i> Deleted</a>
                        </td>
                        <td>
                            <a href="/item/active/{{ item.id }}" class="btn default btn-xs green-stripe" style="width: 85px;"><i
                                        class="fa fa-repeat"></i> Restore</a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
            <div class="navigation" style="text-align: right">
                {{ knp_pagination_render(items) }}
            </div>
        </div>
    </div>
</div>