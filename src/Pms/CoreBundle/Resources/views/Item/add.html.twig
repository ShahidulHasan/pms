{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i>Item</div>
                </div>

                <div class="portlet-body form">
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': '', 'novalidate': 'novalidate'} }) }}
                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">

                            <div class="form-group">
                                {{ form_label(form.itemName, 'Item Name :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'margin-right:-60px;font-weight:bold;' } }
                                ) }}
                                <div class="col-md-8">
                                    <div class="input-icon">
                                        {{ form_widget(form.itemName, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;' } }) }}
                                    </div>
                                </div>
                                {{ form_widget(form.save, { 'attr': {'class': 'btn green button-width col-md-1', 'style': 'margin-top:2px;margin-left:10px;height:32px;' } }
                                ) }}
                                <span class="userMessege" style="margin-left: 185px;"></span>
                            </div>
                        </div>

                        <div class="form-actions fluid">
                            <div class="form-group">
                                <div class="col-md-12">
                                <div class="col-md-11" style="margin-top: 30px;margin-left: 4%;">

                                    <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                        <thead>
                                        <tr>
                                            <th>Sl</th>
                                            <th>Item Name</th>
                                            <th>Status</th>
                                            <th>Edit</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% set Route = app.request.uri %}
                                        {% set Url = Route|split('=') %}

                                        {% if Url[1] | default() == null %}{% set i = 0 %}
                                        {% elseif Url[1] != null %}{% set i = (Url[1]*10)-10 %}
                                        {% endif %}

                                        {% for items in item %}
                                            {% set i = i + 1 %}
                                            {% set color = [" "] %}

                                            {% if items.status == 0 %}{% set color = color|merge(["red"]) %}
                                            {% elseif items.status == 1 %}{% set color = color|merge(["green"]) %}
                                            {% endif %}

                                            <tr>
                                                <td style="width: 60px;">{{ i }} .</td>
                                                <td style="width: 622px; color: {{ color|join("") }};">{{ items.itemName }}</td>
                                                {% if items.status == 1 %}
                                                    <td style="width: 80px;">
                                                        <a href="/item/delete/{{ items.id }}" style="width: 85px;" class="btn default btn-xs green-stripe"><i
                                                                    class="fa fa-trash-o"></i> Delete</a>
                                                    </td>
                                                    <td>
                                                        <a href="/item/update/{{ items.id }}" style="width: 85px;" class="btn default btn-xs blue-stripe"><i
                                                                    class="fa fa-edit"></i> Update</a>
                                                    </td>
                                                {% endif %}
                                                {% if items.status == 0 %}
                                                    <td style="color: red;">
                                                        <a href="#" class="btn default btn-xs red-stripe" style="width: 85px;"><i
                                                                    class="fa fa-times"></i> Deleted</a>
                                                    </td>
                                                    <td style="width: 85px;">

                                                    </td>
                                                {% endif %}
                                            </tr>

                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <div class="navigation" style="text-align: right">
                                        {{ knp_pagination_render(item) }}
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}