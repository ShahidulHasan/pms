{% extends 'base.html.twig' %}

{% block body %}

    {{ include('::flash-message.html.twig') }}

    <span class="buyerMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> Received List</div>
                </div>

                <div class="form-body left">
                    <div class="form-actions fluid">
                        <div class="table-toolbar" style="float: right;margin-right: 20px;">
                            <div class="btn-group">
                                <a href="/receive/item/new" class="btn green">
                                    Receive
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

    <div class="form-actions fluid" id="project-list-div">
        <div class="form-group">
            <div class="col-md-12">

                <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Received Date</th>
                        <th>Received By</th>
                        <th>GRN</th>
                        <th>Invoice</th>
                        <th>Calan</th>
                        <th>Vendor/Buyer</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% if page == 1 %}{% set i = 0 %}
                    {% else %}{% set i = (page * 50) - 50 %}
                    {% endif %}

                    {% for receivedItem in receivedI %}
                        {% set i = i + 1 %}
                        {% set color = [" "] %}

                        <tr>
                            <td class="col-md-1">{{ i }} .</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.receivedDate | date('Y-m-d') }}</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.receivedBy.username }}</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.grn }}</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.invoice.title }}</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.calan.title }}</td>
                            <td class="col-md-1" style="color: {{ color|join("") }};">{{ receivedItem.vendor.vendorName |default() }} {{ receivedItem.buyer.username |default() }}</td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation" style="text-align: right">
                    {{ knp_pagination_render(receivedI) }}
                </div>
            </div>
        </div>
    </div>
            </div>
    </div>
</div>

{% endblock %}