{% extends 'base.html.twig' %}

{% block body %}

    {{ include('::flash-message.html.twig') }}

    <span class="buyerMessege"></span>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> Attach</div>
                </div>

                <div class="form-body left">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'upload-form', 'novalidate': 'novalidate'} }) }}
                    <div class="form-actions fluid">
                        <div class="form-group">
                            {{ form_label(form.file, 'File Attach :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'font-weight:bold;' }}
                            ) }}
                            <div class="col-md-6">
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="input-group">
                                                <span class="input-group-btn">
                                                    <span class="uneditable-input">
                                                        <i class="fa fa-file fileupload-exists"></i>
                                                        <span class="fileupload-preview"></span>
                                                    </span>
                                                </span>
                                                <span class="btn default btn-file">
                                                    <span class="fileupload-new">
                                                        <i class="fa fa-paper-clip"></i>Select file
                                                    </span>
                                                    <span class="fileupload-exists">
                                                        <i class="fa fa-undo"></i>Change
                                                    </span>
                                                    {{ form_widget(form.file, { 'attr': {'class': 'default form-control'} }) }}
                                                </span>
                                        <a href="form_component.html#" class="btn red fileupload-exists"
                                           data-dismiss="fileupload"><i class="fa fa-trash-o"></i> Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.title, 'Title :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'font-weight:bold;' } }
                            ) }}
                            <div class="col-md-8">
                                <div class="input-icon">
                                    {{ form_widget(form.title, { 'attr': {'class': 'form-control col-md-4', 'style': 'padding-left: 10px !important;'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, 'Description :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'font-weight:bold;' } }
                            ) }}
                            <div class="col-md-8">
                                <div class="input-icon">
                                    {{ form_widget(form.description, { 'attr': {'class': 'form-control col-md-4', 'style': 'height:72px;'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-11" style="text-align: right;">
                                <div class="input-icon">
                                    {{ form_widget(form.save, { 'attr': {'class': 'btn green button-width', 'style': 'width:100px;margin-right:25px;' } } ) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions fluid" id="project-list-div">
        <div class="form-group">
            <div class="col-md-12">
                <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                    <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Title</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>

                    {% if page == 1 %}{% set i = 0 %}
                    {% else %}{% set i = (page * 10) - 10 %}
                    {% endif %}

                    {% for invoice in invoices %}
                        {% set i = i + 1 %}
                        {% set color = [" "] %}

                        <tr>
                            <td>{{ i }} .</td>
                            <td class="col-md-8" style="color: {{ color|join("") }};">{{ invoice.title }}</td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation" style="text-align: right">
                    {{ knp_pagination_render(invoices) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}