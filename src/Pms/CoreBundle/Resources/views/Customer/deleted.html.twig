{% extends 'base.html.twig' %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="false"></button>
            <strong></strong> {{ flashMessage }}.
        </div>
    {% endfor %}

    <span class="customerMessege"></span>

    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title"></h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-gift"></i>
                    <a href="#" class="customer-active-list">Active Customer List</a>
                    <i class="fa">|</i>
                </li>
                <li>
                    <i class="fa fa-gift"></i>
                    <a href="#" class="customer-deleted-list">Deleted Customer List</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="portlet box light-grey">

                <div class="portlet-title">
                    <div class="caption"><i class="fa fa-reorder"></i> Customer</div>
                </div>

                <div class="portlet-body form">

                    <div class="form-body left">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Successfully insert.
                        </div>

                        <div class="form-actions fluid">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'id': 'category-form', 'novalidate': 'novalidate'} }) }}
                            <div class="form-group">
                                {{ form_label(form.customerName, 'Customer Name :', {'label_attr': {'class': 'control-label col-md-2', 'style': 'margin-right:-50px;font-weight:bold;' } }
                                ) }}
                                <div class="col-md-8">
                                    <div class="input-icon">
                                        {{ form_widget(form.customerName, { 'attr': {'class': 'form-control', 'style': 'padding-left: 10px !important;', 'placeholder': 'Add category name' } }) }}
                                    </div>
                                </div>
                                <input type="button" name="ajaxSaveCategory" value="Save" id="ajaxSaveCategory" class="btn green button-width col-md-1" style="margin-top:2px;margin-left:10px;height:32px;">
                                <span class="userMessege" style="margin-left: 195px;"></span>
                            </div>
                            {{ form_end(form) }}
                        </div>

                        <div class="form-actions fluid" id="customer-list-div">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="col-md-11" style="margin-top: 30px;margin-left: 4%;">

                                        <table class="table table-striped bold" style="border: 1px solid ghostwhite;">
                                            <thead>
                                            <tr>
                                                <th>Sl</th>
                                                <th>Customer Name</th>
                                                <th>Status</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% if page == 1 %}{% set i = 0 %}
                                            {% else %}{% set i = (page * 10) - 10 %}
                                            {% endif %}

                                            {% for customer in customers %}
                                                {% set i = i + 1 %}
                                                {% set color = [" "] %}

                                                {% if customer.status == 0 %}{% set color = color|merge(["red"]) %}
                                                {% elseif customer.status == 1 %}{% set color = color|merge(["green"]) %}
                                                {% endif %}

                                                <tr>
                                                    <td style="width: 60px;">{{ i }} .</td>
                                                    <td style="width: 622px; color: {{ color|join("") }};">{{ customer.customerName }}</td>
                                                    <td style="color: red;">
                                                        <a href="#" class="btn default btn-xs red-stripe" style="width: 85px;"><i
                                                                    class="fa fa-times"></i> Deleted</a>
                                                    </td>
                                                    <td style="width: 85px;">
                                                        <a href="/customer/active/{{ customer.id }}" class="btn default btn-xs green-stripe" style="width: 85px;"><i
                                                                    class="fa fa-repeat"></i> Restore</a>
                                                    </td>
                                                </tr>

                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <div class="navigation" style="text-align: right">
                                            {{ knp_pagination_render(customers) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}